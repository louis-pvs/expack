{
  "name": "expact",
  "version": "0.1.0",
  "description": "boilerplate for express + webpack stack",
  "repository": "ssh://git@digitalocean/var/repo/louis-vincent.me.git",
  "author": "@louis-vincent <design.vincent.louis@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "start": "node ./dist/server.js",
    "dev": "nodemon ./src/server/dev.js",
    "build:server": "webpack --config webpack.server.config.js",
    "build:app": "webpack",
    "build": "run-p \"build:* --parallel --mode=production\"",
    "build-dev": "run-p \"build:* --parallel --mode=development\""
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-eslint": "8",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "eslint": "4.x",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-jest": "^22.1.2",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "open-browser-webpack-plugin": "^0.0.5",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "jest": {
    "bail": true,
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
